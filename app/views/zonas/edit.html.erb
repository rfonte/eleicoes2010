<h1>Edição de Zona</h1>

<% form_for(@zona) do |f| %>
  <%= f.error_messages %>

  <p>
    Município<br />
    <%= collection_select(:zona, :municipio_id, Municipio.all, :id, :nome_munic) %>
  </p>
  <p>
    Estado<br />
    <%= collection_select(:zona, :estado_id, Estado.all, :id, :nome_est) %>
  </p>
  <p>
    Nome da Zona<br />
    <%= f.text_field :nome_zona %>
  </p>
  <p>
    <%= f.submit "Atualizar" %>
  </p>
<% end %>

<%= link_to 'Ver', @zona %> |
<%= link_to 'Voltar', zonas_path %>

